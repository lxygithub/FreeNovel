<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_cover"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_book_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/ic_delete"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_cover"
        app:layout_constraintLeft_toLeftOf="@+id/iv_item_cover"
        app:layout_constraintRight_toRightOf="@+id/iv_item_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_item_cover" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_text"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_cover"
        app:layout_constraintStart_toStartOf="@+id/iv_item_cover"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_cover"
        tools:text="添加" />
</androidx.constraintlayout.widget.ConstraintLayout>